{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

    "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18.19.1"
    }
  },

  "onCreateCommand": "sudo apt-get update && sudo apt-get install -y --no-install-recommends openjdk-21-jdk && sudo apt-get clean && sudo rm -rf /var/lib/apt/lists/*",
  "postCreateCommand": "bash -lc 'java -version && javac -version && node -v && npm -v'",

  "containerEnv": {
    "JAVA_HOME": "/usr/lib/jvm/java-21-openjdk-amd64",
    "NVM_DIR": "/home/vscode/.nvm"
  },
  "containerEnv": {
    "JAVA_HOME": "/usr/lib/jvm/java-21-openjdk-amd64"
  }
}
